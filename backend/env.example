# Database Configuration
# Supported: sqlite, postgresql, mysql
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite+aiosqlite:///./zeroboard.db

# For PostgreSQL:
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/zeroboard

# For MySQL:
# DATABASE_TYPE=mysql
# DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/zeroboard

# Application Settings
SECRET_KEY=change-me-in-production-use-secrets-token-urlsafe-32
ENVIRONMENT=development
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Session Configuration
SESSION_COOKIE_NAME=zero_board_session
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SECURE=false
# SameSite options: "strict", "lax", or "none"
# - "strict": Most secure, but blocks cross-origin cookies (use for same-origin only)
# - "lax": Allows cross-origin cookies for top-level navigation only (not for AJAX/fetch)
# - "none": Allows all cross-origin cookies (requires secure=true)
# Note: In development mode, "strict" or "lax" is automatically changed to "none" with secure=true
#       Modern browsers allow secure=true on localhost even over HTTP
SESSION_COOKIE_SAMESITE=lax
SESSION_EXPIRE_MINUTES=1440

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT_PER_MINUTE=5

# Logging
LOG_DIR=./logs

